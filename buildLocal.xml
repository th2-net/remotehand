<project name="ClearTH RemoteHand local" default="WebRHRelease" basedir=".">
    <target name="Get revision">
        <path id="svnant.libs.path">
        <fileset dir="lib_for_build">
            <include name="svnant.jar"/>
            <include name="svnClientAdapter.jar"/>
            <include name="svnjavahl.jar"/>
        </fileset>
    </path>

    <!-- Load SvnAnt -->
    <typedef resource="org/tigris/subversion/svnant/svnantlib.xml" classpathref="svnant.libs.path" />    
        <!-- Find head revision number from the local repository. -->
        <svn username="" password="" javahl="false" svnkit="false">
            <info target="." />
        </svn>
        <!-- Display svn revision number -->
        <echo>Revision found: ${svn.info.lastRev}</echo>
    </target>

    <target name="WebRHRelease" depends="Get revision">
        <subant target="WebRHRelease">
            <fileset dir="." includes="build.xml"/>
            <property name="svn.info.lastRev" value="${svn.info.lastRev}"/>
        </subant>
    </target>

    <target name="UIAHRelease" depends="Get revision">
        <subant target="UIAHRelease">
            <fileset dir="." includes="build.xml"/>
            <property name="svn.info.lastRev" value="${svn.info.lastRev}"/>
        </subant>
    </target>
</project>
